{
    "name": "indextts-studio",
    "version": "1.0.0",
    "description": "IndexTTS Studio - Modern TTS Desktop Application",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --dev",
        "build": "electron-builder --win --x64",
        "build:portable": "electron-builder --win portable --x64",
        "build:dir": "electron-builder --win dir --x64",
        "lint": "eslint src/js/**/*.js"
    },
    "author": "IndexTTS Team",
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "com.indextts.studio",
        "productName": "IndexTTS Studio",
        "directories": {
            "output": "dist"
        },
        "compression": "maximum",
        "win": {
            "target": [
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "src/assets/icons/icon.ico"
        },
        "portable": {
            "artifactName": "IndexTTS-Studio-${version}.exe"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "artifactName": "IndexTTS-Studio-Setup-${version}.exe"
        },
        "files": [
            "**/*",
            "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
            "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
            "!**/node_modules/*.d.ts",
            "!**/*.map"
        ],
        "asar": true,
        "asarUnpack": [
            "node_modules/electron/**/*"
        ]
    }
}